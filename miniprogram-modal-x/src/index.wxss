.customModal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
}

.blackBg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 600rpx;
  /* min-height: 280rpx; */
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 8rpx;
}

.title {
  font-size: 36rpx;
  color: #313133;
  text-align: center;
  padding: 40rpx 0 20rpx 0;
}

.desc {
  font-size: 28rpx;
  color: #313133;
  line-height: 40rpx;
  padding: 0 30rpx;
  text-align: center;
}

.btn {
  display: block;
  width: 100%;
  height: 110rpx;
  position: relative;
  margin-top: 50rpx;
}

.cancel {
  float: left;
  width: 50%;
  font-size: 32rpx;
  color: #b5975e;
  height: 100%;
  text-align: center;
  line-height: 110rpx;
  position: relative;
    font-weight: bold;
}

.sure {
  float: right;
  width: 50%;
  height: 100%;
  font-size: 32rpx;
  color: #313133;
  text-align: center;
  line-height: 110rpx;
  font-weight: bold;
}

.btn::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  background: #dfdfdf;
  transform: scale(1, 0.5);
  -webkit-transform: scale(1, 0.5);
}

.cancel::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background: #dfdfdf;
  transform: scale(0.5, 1);
  -webkit-transform: scale(0.5, 1);
}
